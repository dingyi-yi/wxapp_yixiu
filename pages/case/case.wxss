/* pages/case/case.wxss */
.header_view_hide{
  display: none;
}
.header_view_show{
  display: block;
}
.case_search {
  display: flex;
  border: 2px solid #1296db;
  border-radius: 5px;
  background: transparent;
  border-radius: 10px 10px 10px 10px;
  margin-left: 3px;
  height: 80rpx;
  width: 600rpx;
  top: 0;
  right: 0;
}

.case_search input {
  flex: 12;
  border-radius: 5px;
  background: transparent;
  border-radius: 0px 10px 10px 0px;
  height: 80rpx;
}

.search_button {
  background: #1296db;
  display: flex;
  width: 80px;
  flex: 0;
  border-radius: 0px 10px 10px 0px;
  height: 80rpx;
  font-size: 15px;
  color: #FFFFFF;
  text-align: center;
  white-space: nowrap;
  align-items: center;
  justify-content: center;
}

.case_public {
  flex: 1;
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.headerView {
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
