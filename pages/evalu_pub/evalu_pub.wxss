.user-box {
  width: 100%;
  display: flex;

}
.user-img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.user-text {
  color: #000;
  font-size: 20px;
  flex-direction: column;
  justify-content: center;
}
.order-box{
  display:flex;
  height:auto;
  flex: 1;
}
.order-key{
  height:auto;
  margin:10rpx;
  width:110rpx;
  font-size: 20px;
  border-right: 1px solid #ccc;
}
.order-value{
  font-size:18px;
  display:flex;
  flex-direction:column;
  height:auto;
  width:500rpx;
  flex-grow:1;
  text-align:left;
  margin:10rpx;
  font-size:18px;
}
