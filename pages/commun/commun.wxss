/* pages/commun/commun.wxss */
.commun_search {
  display: flex;
  border: 2px solid #1296db;
  border-radius: 5px;
  background: transparent;
  border-radius: 10px 10px 10px 10px;
  margin-left: 3px;
  height: 80rpx;
  width: 600rpx;
  top: 0;
  right: 0;
}

.commun_search input {
  flex: 12;
  border-radius: 5px;
  background: transparent;
  border-radius: 0px 10px 10px 0px;
  height: 80rpx;
}

.search_button {
  background: #1296db;
  display: flex;
  width: 80px;
  flex: 0;
  border-radius: 0px 10px 10px 0px;
  height: 80rpx;
  font-size: 15px;
  color: #FFFFFF;
  text-align: center;
  white-space: nowrap;
  align-items: center;
  justify-content: center;
}

.commun_public {
  flex: 1;
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.headerView {
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

/* 文本样式 */
.pyqContentText {
  margin-top: 10rpx;
  margin-bottom: 0rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}

/* 底部栏样式 */

.bottomStyle {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  }
  .tool{
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
  }
  .tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
  }
  .tool-item image{
  height: 50rpx;
  width: 50rpx;
  vertical-align: -3px;
  margin-right: 10rpx;
  }

/*用户部分*/
.user-box {
  width: 100%;
  display: flex;

}

.user-img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.user-text {
  color: #000;
  font-size: 20px;
  flex-direction: column;
  justify-content: center;
}

.com-boxs {
  /* display: flex;*/
  padding: 27rpx;
  box-sizing: border-box;
  border: 1.5px solid #b0b6bb;
  border-spacing: 100ch;
  border-color: #1296db;
  border-radius: 20px;
  margin: 10rpx;
}

.com-box {
  display: flex;
  height: auto;
  flex-direction: column;
  flex: 1;
}

.header_view_hide {
  display: none;
}

.header_view_show {
  display: inline;
}

/*信息图片部分*/
.image_content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx
}

.images {
  width: 31%;
  height: 200rpx;
  padding: 5rpx
}

.com-img {
  width: 200rpx;
  height: 200rpx;
}

.remind {
  color: #1f1f1f;
  font-size: 14px;
}
/*评论输入框部分*/
.commun_comment {
  display: flex;
  border: 2px solid #1296db;
  border-radius: 5px;
  background: transparent;
  border-radius: 10px 10px 10px 10px;
  margin-left: 3px;
  height: 80rpx;
  width: 600rpx;
