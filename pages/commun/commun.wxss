}

/*评论区*/
.comments{
  display:flex;
  flex-wrap: wrap;
}
.comments:first-child {
  border-top:1px dotted gray;
}
.comment_user{
  color:blue;
  word-wrap: break-word;
}
.ibox{
  border: 1px solid silver;
  background-color: rgb(200, 209, 218);
  flex-grow: 1;
  color: black;
  text-align: center;
 }
.choosed{
  background-color:rgb(0, 140, 255)
}
